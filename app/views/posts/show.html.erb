<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Body:</b>
  <%= @post.body %>
</p>

<p>
  <b>Author:</b>
  <%= @post.author.name %>
</p>
<p>
  <b>Comments</b>
  <ul>
  <% @post.comments.each do |comment| %>
  <li><%= comment.body %> - <%= comment.submitter %></li>
  <% end %>
</ul>
</p>
<p>
<%= link_to 'Add Comment', new_post_comment_path(@post) %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
